unit database_load_config;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls, Vcl.Buttons,
  Vcl.DBCtrls;

type
  Tfr_load_config = class(TForm)
    plMain: TPanel;
    Button1: TButton;
    Button2: TButton;
    Panel1: TPanel;
    Label1: TLabel;
    lbAllConfig: TListBox;
    procedure Button1Click(Sender: TObject);
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    ConfigList: TStringList;
  end;

var
  fr_load_config: Tfr_load_config;

implementation

{$R *.dfm}

procedure Tfr_load_config.Button1Click(Sender: TObject);
begin
  close;
end;

procedure Tfr_load_config.FormShow(Sender: TObject);
var i:integer;
begin
if Assigned(ConfigList) then
  begin
    // »спользуем ConfigList дл€ обработки переданных данных
    for I := 0 to ConfigList.Count - 1 do
    begin
      lbAllConfig.Items.Add(ConfigList[I]);
    end;
  end;
end;

end.
